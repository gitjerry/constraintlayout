<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <!--  b/117087368 -->

        <Space
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#89ff0000"
            app:layout_constraintBottom_toBottomOf="@+id/a"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintLeft_toLeftOf="@+id/a"
            app:layout_constraintRight_toRightOf="@+id/a"
            app:layout_constraintTop_toTopOf="@+id/a"
            app:layout_constraintVertical_bias="0" />

        <View
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#8900ff00"
            app:layout_constraintBottom_toBottomOf="@+id/a"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintLeft_toLeftOf="@+id/a"
            app:layout_constraintRight_toRightOf="@+id/a"
            app:layout_constraintTop_toTopOf="@+id/a"
            app:layout_constraintVertical_bias="0.5" />

        <View
            android:id="@+id/d"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#890000ff"
            app:layout_constraintBottom_toBottomOf="@+id/a"
            app:layout_constraintDimensionRatio="4:1"
            app:layout_constraintLeft_toLeftOf="@+id/a"
            app:layout_constraintRight_toRightOf="@+id/a"
            app:layout_constraintTop_toTopOf="@+id/a"
            app:layout_constraintVertical_bias="1" />

</android.support.constraint.ConstraintLayout>