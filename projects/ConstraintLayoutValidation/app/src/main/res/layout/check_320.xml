<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_height="wrap_content"
    android:background="#FF0"
    android:focusable="true">

    <!-- b/152805954 -->

    <TextView
        android:id="@+id/ic__checkout_tip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="center_vertical|start"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Driver Tip" />

    <Button
        android:id="@+id/ic__checkout_tip_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:minHeight="100dp"
        android:paddingBottom="2dp"
        android:text="checkout place"
        app:layout_constraintBaseline_toBaselineOf="@id/ic__checkout_tip_label"
        app:layout_constraintStart_toEndOf="@id/ic__checkout_tip_label" />

    <TextView
        android:id="@+id/ic__checkout_tip_change_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@id/ic__checkout_tip_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="$55.55" />
</android.support.constraint.ConstraintLayout>