<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:tag="0,0,1080,732"
    android:paddingTop="12dp">

    <tag android:id="@+id/wrap_horizontal" android:value="0,0,1080,1920 36,36,1008,120 36,216,1008,120 36,396,1008,120 36,576,1008,120"/>
    <tag android:id="@+id/wrap_vertical" android:value="0,0,1080,732 36,36,1008,120 36,216,1008,120 36,396,1008,120 36,576,1008,120"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0ff0f0"
        android:minHeight="40dp"
        android:tag="36,36,1008,120"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="#ff00ff"
            android:gravity="center"
            android:text="ConstraintLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0ff0f0"
        android:minHeight="40dp"
        android:tag="36,216,1008,120"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#ff00ff"
            android:gravity="center"
            android:text="FrameLayout" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0ff0f0"
        android:minHeight="40dp"
        android:tag="36,396,1008,120"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#ff00ff"
            android:gravity="center"
            android:text="RelativeLayout" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0ff0f0"
        android:minHeight="40dp"
        android:tag="36,576,1008,120"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#ff00ff"
            android:gravity="center"
            android:text="LinearLayout" />
    </LinearLayout>

</LinearLayout>