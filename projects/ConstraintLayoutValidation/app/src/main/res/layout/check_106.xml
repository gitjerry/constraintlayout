<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="0,0,0,0"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- b/64246841 -->

    <tag android:id="@+id/wrap_horizontal" android:value="0,0,0,1920 0,0,0,0 0,-112,0,113"/>
    <tag android:id="@+id/wrap_vertical" android:value="0,0,1080,1323 0,0,1080,1323 0,1210,1080,113"/>

    <ImageView
        android:id="@+id/iv_avatar"
        android:tag="0,0,1080,1323"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:tag="0,1210,1080,113"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:ellipsize="end"
        android:gravity="end"
        android:lines="1"
        android:padding="8dp"
        android:text="23333"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintLeft_toLeftOf="@id/iv_avatar"
        app:layout_constraintRight_toRightOf="@+id/iv_avatar" />

</android.support.constraint.ConstraintLayout>